# All commands shall be executed on mounted eMMC
ROOTFSDIR=$1 
cd $ROOTFSDIR

# Generating public/private rsa key pair.
[ -d $ROOTFSDIR/home/root/.ssh ] || mkdir -p $ROOTFSDIR/home/root/.ssh
ssh-keygen -b 2048 -t rsa -f $ROOTFSDIR/home/root/.ssh/id_rsa -q -N ""
cat $ROOTFSDIR/home/root/.ssh/id_rsa.pub > $ROOTFSDIR/home/root/.ssh/authorized_keys
